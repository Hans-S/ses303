					},
					{
						"id": "thermostat",
						"capabilities": [
							"target_temperature"
						]
					}
				]
			},
			"class": "thermostat",
			"capabilities": [
				"target_temperature",
				"measure_battery"
			],
			"capabilitiesOptions": {
				"target_temperature": {
					"min": 4,
					"max": 28,
					"step": 0.5
				}
			},
			"images": {
				"large": "/drivers/LC13/assets/images/large.jpg",
				"small": "/drivers/LC13/assets/images/small.jpg"
			}
		}
